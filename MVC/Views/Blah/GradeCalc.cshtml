@model GradeModel;


<!--A "Grade Calculator" form that takes as input a percentage scored for each grade
category listed in the syllabus-->

<h3>IS 413 Grade Calculator</h3>
<p>Enter your percentage scored for each grade category</p>

<!--form for each grade-->
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /><br />
    <label>Group Projects: </label>
    <input id="gp" asp-for="GP" /><br />
    <label>Quizzes: </label>
    <input id="quizzes" asp-for="Quizzes" /><br />
    <label>Midterm Exam: </label>
    <input id="midterms" asp-for="Midterms" /><br />
    <label>Final Exam: </label>
    <input id="final" asp-for="Final" /><br />
    <label>INTEX: </label>
    <input id="intex" asp-for="Intex" /><br />

    <!--output any errors-->
    <div asp-validation-summary="All"></div>


    <br />
    <input id="btnSend" type="submit" value="Calculate" />
</form>

